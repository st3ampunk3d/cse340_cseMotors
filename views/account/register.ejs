<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    <% } else {
      res.redirect('/')
    } %>

    <form action="/account/register" method="post">
      
        <div class="container">
          <label for="account_firstname"><b>First name:</b></label>
          <input type="text" placeholder="Enter First Name" name="account_firstname" required>

          <label for="account_lastname"><b>Last name:</b></label>
          <input type="text" placeholder="Enter Last Name" name="account_lastname" required>

          <label for="account_email"><b>Email address:</b></label>
          <input type="text" placeholder="Enter a valid Email Address" name="account_email" required>
      
          <label for="accountPassword">Password:</label> 
          <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
          <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      
          <button type="submit">Register</button>
        </div>
      </form>