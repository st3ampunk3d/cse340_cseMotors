<% if (title) { %>
    <h1><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    <% } else {
      res.redirect('/')
    } %>

    <button type="button"><a href="/messages/sent">Sent</a></button>
    <button type="button"><a href="/messages/archived">Archived</a></button>

    <table id="messageTable" class="message-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Sender</th>
                <th>Subject</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <%- messageList %>
        </tbody>
    </table>